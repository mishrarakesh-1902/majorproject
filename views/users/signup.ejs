<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h3 >SignUp on Wanderlust </h3>
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <lable for="username" class="form-label">Username</lable>
                <input  name="username" id="username" type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter a username</div>
            </div>
            <div class="mb-3 mt-3">
                <lable for="email" class="form-label">Email</lable>
                <input name="email" id="email" type="email" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid email</div>
            </div>
            <div class="mb-3 mt-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" id="password" type="password" class="form-control" required>
                <div class="invalid-feedback">Please enter a password</div>
            </div>
            <button type="submit" class="btn btn-outline-dark">Sign Up</button>
        </form>
    </div>
</div>
